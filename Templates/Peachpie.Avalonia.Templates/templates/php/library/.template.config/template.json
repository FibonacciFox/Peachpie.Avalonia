{
  "$schema": "http://json.schemastore.org/template",
  "author": "FibonacciFox",
  "classifications": [ "Library", "PeachPie" ],
  "description": "The Peachpie Library.",
  "groupIdentity": "Peachpie.Library",
  "identity": "Peachpie.Library",
  "name": "PHP Library",
  "shortName": "php.lib",
  "sourceName": "PeachpieLibraryTemplate",
  "defaultName": "PeachpieLibrary",
  "preferNameDirectory": true,

  "tags": {
    "language": "PHP",
    "type": "project"
  },

  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "uiLang": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Choose language for post-create instructions",
      "defaultValue": "en",
      "choices": [
        { "choice": "en", "description": "English" },
        { "choice": "ru", "description": "Русский" }
      ]
    }
  },

  "primaryOutputs": [
    { "path": "PeachpieLibraryTemplate.msbuildproj" }
  ],

  "postActions": [
    {
      "id": "restore",
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "actionId": "E2F6A4F0-62C0-4A0A-8E24-81D3B5711B0A",
      "continueOnError": true
    },
    {
      "id": "stubs-en",
      "condition": "(uiLang == 'en')",
      "description": "Generate PHP stubs (NuGet vendor stubs + reflection stubs).",
      "manualInstructions": [
        { "text": "Run 'dotnet msbuild -t:PeachpieStubs' to restore vendor stubs and generate PHP stubs into <project>/vendor/Stubs" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "id": "stubs-ru",
      "condition": "(uiLang == 'ru')",
      "description": "Сгенерировать PHP заглушки (vendor из NuGet + рефлексия).",
      "manualInstructions": [
        { "text": "Выполните 'dotnet msbuild -t:PeachpieStubs', чтобы восстановить vendor-заглушки и сгенерировать PHP-заглушки в <проект>/vendor/Stubs" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
