<Window  xmlns="https://github.com/avaloniaui"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
           xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
           mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
           Icon="/Assets/icon.png"
           x:Class="Views.MainWindow"
           Title="Application">
        <Grid ColumnDefinitions="Auto,*">
            <StackPanel Background="#293659" Grid.Column="0" Width="300" IsVisible="{Binding !#BurgerButton.IsChecked }">
                <TextBlock Padding="17" HorizontalAlignment="Center" Classes="Headline6"> <icons:MaterialIcon Kind="ApplicationBrackets"/> PeachPie.Avalonia</TextBlock>
                <ListBox Name="ItemMenu" Tapped="ItemMenu_OnTapped" Background="Transparent">
                    <TextBlock Classes="Headline5" VerticalAlignment="Center" HorizontalAlignment="Left"> <icons:MaterialIcon Kind="Home" Width="25" Height="25" /> Home</TextBlock>
                    <TextBlock Classes="Headline5" VerticalAlignment="Center" HorizontalAlignment="Left"> <icons:MaterialIcon Kind="ButtonCursor" Width="25" Height="25" /> Buttons</TextBlock>
                    <TextBlock Classes="Headline5" VerticalAlignment="Center" HorizontalAlignment="Left"> <icons:MaterialIcon Kind="PageLayoutHeader" Width="25" Height="25" /> Header</TextBlock>
                    <TextBlock Classes="Headline5" VerticalAlignment="Center" HorizontalAlignment="Left"> <icons:MaterialIcon Kind="TextBoxEditOutline" Width="25" Height="25" /> Fields</TextBlock>
                    <TextBlock Classes="Headline5" VerticalAlignment="Center" HorizontalAlignment="Left"> <icons:MaterialIcon Kind="ProgressHelper" Width="25" Height="25" /> Progress Indicators</TextBlock>
                </ListBox>
            </StackPanel>
            <StackPanel Background="#161E35" Grid.Column="1">
                <material:ColorZone Grid.Column="1" VerticalAlignment="Top"  Height="56" Padding="12" Mode="Accent">
                    <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" ColumnDefinitions="Auto,24,*">
                        <ToggleButton Name="BurgerButton" ToolTip.Tip="Burger" Grid.Column="0" Classes="Flat TransparentBack" Padding="10" Width="{Binding $self.Bounds.Height}" Content="{icons:MaterialIconExt Menu}" />
                        <TextBlock Grid.Column="2" Classes="Headline6" VerticalAlignment="Center" Text="Material Peachpie.Avalonia" />
                    </Grid>
                </material:ColorZone>
                <ContentControl Name="PageView" />
            </StackPanel>
        </Grid>
</Window>