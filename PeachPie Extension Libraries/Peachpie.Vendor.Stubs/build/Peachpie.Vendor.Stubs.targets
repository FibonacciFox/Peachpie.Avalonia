<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    
<!-- Определение задачи -->
<UsingTask TaskName="Peachpie.Vendor.Stubs.PackageListInfo" AssemblyFile="$(MSBuildThisFileDirectory)..\lib\netstandard2.1\Peachpie.Vendor.Stubs.dll" />

    <!-- Определение цели для задачи -->
    <Target Name="UpdateVendorStubs" AfterTargets="Build">
        <Peachpie.Vendor.Stubs.PackageListInfo
                StubsDirectory="$(ProjectDir)vendor\stubs"
                NugetPackagePathPattern="$(UserProfile)\.nuget\packages\{PackageId}\{Version}\vendor" />
    </Target>
    
</Project>

